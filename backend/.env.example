# ACME Corp CSR Donation Platform
# Environment Configuration

# Application
APP_NAME="ACME CSR Platform"
APP_ENV=local
APP_KEY=
APP_DEBUG=true
APP_TIMEZONE=UTC
APP_URL=http://localhost:8000

# Frontend URL (for CORS and Sanctum)
FRONTEND_URL=http://localhost:5173

# Database Configuration
DB_CONNECTION=pgsql
DB_HOST=127.0.0.1
DB_PORT=5432
DB_DATABASE=acme_csr_platform
DB_USERNAME=postgres
DB_PASSWORD=your_password

# Sanctum Configuration
SANCTUM_STATEFUL_DOMAINS=localhost:5173,127.0.0.1:5173

# Cache Configuration
CACHE_STORE=database
CACHE_PREFIX=

# Session Configuration
SESSION_DRIVER=database
SESSION_LIFETIME=120
SESSION_ENCRYPT=false
SESSION_PATH=/
SESSION_DOMAIN=null

# Queue Configuration
QUEUE_CONNECTION=database

# Mail Configuration (for notifications and receipts)
MAIL_MAILER=log
MAIL_HOST=127.0.0.1
MAIL_PORT=2525
MAIL_USERNAME=null
MAIL_PASSWORD=null
MAIL_ENCRYPTION=null
MAIL_FROM_ADDRESS="noreply@acme.com"
MAIL_FROM_NAME="${APP_NAME}"

# Payment Provider Configuration
PAYMENT_DEFAULT_PROVIDER=mock
PAYMENT_CURRENCY=USD
PAYMENT_MINIMUM_AMOUNT=1.00
PAYMENT_MAXIMUM_AMOUNT=10000.00

# Mock Payment Provider (for development)
MOCK_PAYMENT_SUCCESS_RATE=90

# Stripe Configuration (production)
STRIPE_ENABLED=false
STRIPE_WEBHOOK_SECRET=

# PayPal Configuration (production)
PAYPAL_ENABLED=false
PAYPAL_WEBHOOK_ID=

# Refund Settings
REFUND_ENABLED=true
REFUND_TIME_LIMIT_DAYS=30

# Logging
LOG_CHANNEL=stack
LOG_STACK=single
LOG_DEPRECATIONS_CHANNEL=null
LOG_LEVEL=debug

# Broadcasting
BROADCAST_CONNECTION=log
BROADCAST_DRIVER=log

# File Storage
FILESYSTEM_DISK=local

# Redis (optional - for caching and sessions in production)
REDIS_HOST=127.0.0.1
REDIS_PASSWORD=null
REDIS_PORT=6379
